{
	"name": "Article Dex Lite",
	"description": "Article Dex Chrome Extension",
	"version": "1.0",
	"manifest_version": 3,
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"]
		}
	],
	"action": {
		"default_popup": "popup.html",
		"default_title": "Article Dex Lite"
	},
	"permissions": ["tabs"],
	"background": { "scripts": ["background.js"] }
}
